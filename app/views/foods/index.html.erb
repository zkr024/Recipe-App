<h1>Food section</h1>


<table class= "food_table">
  <thead class= "head">
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= button_to 'Delete', user_food_path(@user, food), method: :delete, class: "delete" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="btn_location">
  <%= link_to 'Add Food', new_user_food_path(@user), class: "link" %>
</div>
