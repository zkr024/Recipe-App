<h1>Add Food Section</h1>

<%= form_with model: @food, url: user_foods_path do |f| %> 
  <div class="form">
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'input' %>
    </div>
    <div>
    <%= f.label :measurement_unit %>
    <%= f.text_field :measurement_unit, class: 'input'%>
    </div>
    <div>
    <%= f.label :price %>
    <%= f.number_field :price, class: 'input' %>
    </div>
    <div>
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'input' %>
    </div>

    <%= f.submit 'Add', class: "link food_btn" %>
  </div>
<% end %>  